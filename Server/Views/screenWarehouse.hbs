          <div id="hienThidata" :class="checkStatus ? 'display_None' : ' ' ">
            <div class="box-Main">
              <div class="box-data">
                <div class="card-header" style="height: 11%">

                  <div>
                    <div class="dropdown">
                      <button class="btn btn-outline-secondary dropdown-toggle float-left" style="width: 80px;"
