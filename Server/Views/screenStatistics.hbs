<script>



    function selectYear() {
        var year = document.getElementById("yearInput").value;

        // Kiểm tra xem người dùng đã chọn năm hay chưa
        if (year !== "") {
            // Thực hiện các xử lý với năm được chọn ở đây
            console.log("Năm được chọn:", year);
            // ...
        }
    }

    function loadData() {
        fetch('/statistics/sold-products', {
            method: 'GET',
            headers: {
                'Content-Type': 'application/json'
            },
        })
                .then(response => response.json())
                .then(data => {

                    let dataAll = [];
                    for (let i = 0; i < data.length; i++) {
                        dataAll.push({
                            name:data[i].name,
                            y:parseFloat(data[i].totalDetail)
                        })
                    }
                    highChart(dataAll)
                })
                .catch(error => {
                    console.error(error);
                });
    }
    loadData()


    //vẽ biểu đồ
    function highChart(dataAll){
        Highcharts.chart('container', {
            chart: {
                type: 'pie'
            },
            title: {
                text: ' Top 5 sản phẩm bán chạy'
            },
            tooltip: {
                valueSuffix: '%'
            },
            accessibility: {
                point: {
                    valueSuffix: '%'
                }
            },
            plotOptions: {
                series: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: [{
                        enabled: true,
                        distance: 56
                    }]
                },
                pie: {
                    allowPointSelect: true,
                    borderWidth: 2,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: true,
                        format: '<span style="color:{point.color}">{point.name}</span>: <b>{point.y:.2f}%</b>',
                        distance: 20//độ rộng
                    }
                }
            },
            series: [{
                enableMouseTracking: true,//di chuột vào sẽ hiển thị nội dung ben trong
                animation: {
                    duration: 2000 //thời gian xuất hiện
                },
                name: 'Tỉ lệ',
                colorByPoint: true,
                data: dataAll
            }]
        });
    }

    Highcharts.chart('container2', {
        chart: {
            type: 'column'
        },
        title: {
            text: ' Doanh số và Lợi nhuận năm',
        },
        subtitle: {
